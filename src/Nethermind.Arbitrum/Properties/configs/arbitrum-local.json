{
  "$schema": "https://raw.githubusercontent.com/NethermindEth/core-scripts/refs/heads/main/schemas/config.json",
  "Init": {
    "DiscoveryEnabled": false,
    "PeerManagerEnabled": false,
    "ChainSpecPath": "chainspec/arbitrum-local.json",
    "BaseDbPath": "nethermind_db/arbitrum-local",
    "LogFileName": "arbitrum-local.log"
  },
  "TxPool": {
    "BlobsSupport": "Disabled"
  },
  "Network": {
    "MaxActivePeers" : 0,
    "NettyArenaOrder": 10,
    "MaxNettyArenaCount": 1
  },
  "Sync": {
    "NetworkingEnabled": false,
    "SynchronizationEnabled": false
  },
  "JsonRpc": {
    "Enabled": true,
    "Port": 20545,
    "EnginePort": 20551,
    "UnsecureDevNoRpcAuthentication": true,
    "EngineEnabledModules": ["Net", "Eth", "Subscribe", "Web3", "Arbitrum", "nitroexecution"],
    "AdditionalRpcUrls": [
      "http://localhost:28551|http;ws|net;eth;subscribe;web3;client;debug"
    ],
    "EnabledModules": [
      "Admin",
      "Clique",
      "Consensus",
      "Db",
      "Debug",
      "Deposit",
      "Erc20",
      "Eth",
      "Evm",
      "Net",
      "Nft",
      "Parity",
      "Personal",
      "Proof",
      "Subscribe",
      "Trace",
      "TxPool",
      "Vault",
      "Web3",
      "Arbitrum",
      "nitroexecution"
    ]
  },
  "Pruning": {
    "PruningBoundary": 192
  },
  "Blocks": {
    "SecondsPerSlot": 2,
    "BuildBlocksOnMainState": true
  },
  "Merge": {
    "Enabled": true
  },
  "Arbitrum": {
    "BlockProcessingTimeout": 10000,
    "RebuildLocalWasm": "auto"
  }
}
