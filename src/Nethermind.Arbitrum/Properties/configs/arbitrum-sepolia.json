{
  "$schema": "https://raw.githubusercontent.com/NethermindEth/core-scripts/refs/heads/main/schemas/config.json",
  "Init": {
    "ChainSpecPath": "chainspec/arbitrum-sepolia.json",
    "BaseDbPath": "nethermind_db/arbitrum-sepolia",
    "LogFileName": "arbitrum-sepolia.log"
  },
  "TxPool": {
    "BlobsSupport": "Disabled"
  },
  "Sync": {
    "FastSync": true,
    "SnapSync": true,
    "FastSyncCatchUpHeightDelta": 10000,
    "PivotNumber": 26340000,
    "PivotHash": "0x4aa85d310d133f30b102379cd5fbc5d5e812d962f4f1c84b3cd046cbf7ea932d",
    "HeaderStateDistance": 2000,
    "StateMaxDistanceFromHead": 2000,
    "UseGethLimitsInFastBlocks": false,
    "SnapServingMaxDepth": 2000
  },
  "Discovery": {
    "DiscoveryVersion": "V5"
  },
  "JsonRpc": {
    "Enabled": true,
    "Port": 20545,
    "EnginePort": 20551,
    "UnsecureDevNoRpcAuthentication": true,
    "AdditionalRpcUrls": [
      "http://localhost:28551|http;ws|net;eth;subscribe;web3;client;debug"
    ],
    "EnabledModules": [
      "Admin",
      "Clique",
      "Consensus",
      "Db",
      "Debug",
      "Deposit",
      "Erc20",
      "Eth",
      "Evm",
      "Net",
      "Nft",
      "Parity",
      "Personal",
      "Proof",
      "Subscribe",
      "Trace",
      "TxPool",
      "Vault",
      "Web3",
      "Arbitrum"
    ]
  },
  "Pruning": {
    "PruningBoundary": 2000
  },
  "Blocks": {
    "SecondsPerSlot": 2,
    "PreWarmStateOnBlockProcessing": false,
    "BuildBlocksOnMainState": true
  },
  "Metrics": {
    "NodeName": "Nethermind Arbitrum Sepolia"
  },
  "Merge": {
    "Enabled": true
  },
  "Arbitrum": {
    "BlockProcessingTimeout": 10000,
    "RebuildLocalWasm": "auto"
  },
  "VerifyBlockHash": {
    "Enabled": false,
    "VerifyEveryNBlocks": 10000,
    "ArbNodeRpcUrl": "https://sepolia-rollup.arbitrum.io/rpc"
  }
}
